<Window x:Class="DiaryU.TitleNameForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiaryU"
        mc:Ignorable="d"
        Title="TitleNameForm" Height="128.049" Width="285.366" WindowStartupLocation="CenterScreen">
    <Grid Margin="10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock FontStyle="Italic" TextDecorations="{x:Null}" HorizontalAlignment="Center" VerticalAlignment="Center">Введите название темы:</TextBlock>

        <TextBox Name="titleName" Grid.Row="1" MinWidth="200"></TextBox>
        <Button IsDefault="True" Click="Accept_Click" MinWidth="50" Margin="10,21,187,-5" Content="OK" Grid.Row="2" RenderTransformOrigin="0.422,1.227"/>
        <Button IsCancel="True" MinWidth="50" Content="Отмена" Margin="187,23,10,-5" Grid.Row="2" RenderTransformOrigin="-0.05,0.651" Height="21" VerticalAlignment="Top"/>
    </Grid>
</Window>
